<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <PreferenceScreen
            android:key="daynight"
            android:fragment="com.viper.venom.fragments.DayNightSettings"
            android:layout="@layout/preference_daynight"
            android:title="@string/daynight_title" />
	
         <PreferenceScreen
            android:key="buttons"
            android:fragment="com.viper.venom.fragments.ButtonSettings"
            android:layout="@layout/preference_buttons_settings"
            android:title="@string/buttons_title" />
	
         <Preference
            android:key="powermenu"
            android:fragment="com.viper.venom.fragments.PowerMenu"
            android:layout="@layout/preference_powermenu"
            android:title="@string/powermenu_category" />
  
         <Preference
            android:key="notifications"
            android:fragment="com.viper.venom.fragments.NotificationsSettings"
            android:layout="@layout/preference_notifications_settings"
            android:title="@string/notifications_category" />
	
         <Preference
            android:key="misc"
            android:fragment="com.viper.venom.fragments.MiscSettings"
            android:layout="@layout/preference_misc_settings"
            android:title="@string/misc_category" />
			
</PreferenceScreen>